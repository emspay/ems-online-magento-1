<config>
    <modules>
        <EMS_Payment>
            <version>1.0.1</version>
        </EMS_Payment>
    </modules>
    <global>
        <models>
            <ems_payment>
                <class>EMS_Payment_Model</class>
            </ems_payment>
        </models>
        <blocks>
            <ems_payment>
                <class>EMS_Payment_Block</class>
            </ems_payment>
            <payment>
                <class>EMS_Payment_Block</class>
                <class>Mage_Payment_Block</class>
            </payment>
        </blocks>
        <helpers>
            <ems_payment>
                <class>EMS_Payment_Helper</class>
            </ems_payment>
        </helpers>
        <payment>
            <groups>
                <ems_payment>ems_payment</ems_payment>
            </groups>
        </payment>
        <resources>
            <ems_payment_setup>
                <setup>
                    <module>EMS_Payment</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ems_payment_setup>
        </resources>
        <fieldsets>
            <sales_convert_quote>
                <ems_payment_order_id>
                    <to_order>*</to_order>
                </ems_payment_order_id>
                <ems_payment_banktransfer_reference>
                    <to_order>*</to_order>
                </ems_payment_banktransfer_reference>
                <ems_payment_ideal_issuer_id>
                    <to_order>*</to_order>
                </ems_payment_ideal_issuer_id>
            </sales_convert_quote>
            <sales_convert_order>
                <ems_payment_order_id>
                    <to_quote>*</to_quote>
                </ems_payment_order_id>
                <ems_payment_banktransfer_reference>
                    <to_quote>*</to_quote>
                </ems_payment_banktransfer_reference>
                <ems_payment_ideal_issuer_id>
                    <to_quote>*</to_quote>
                </ems_payment_ideal_issuer_id>
            </sales_convert_order>
        </fieldsets>
        <events>
            <controller_front_init_before>
                <observers>
                    <ems_lib_load>
                        <type>object</type>
                        <class>EMS_Payment_Helper_Autoloader</class>
                        <method>createAndRegister</method>
                    </ems_lib_load>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <frontend>
        <routers>
            <ems_payment>
                <use>standard</use>
                <args>
                    <module>EMS_Payment</module>
                    <frontName>ems_payment</frontName>
                </args>
            </ems_payment>
        </routers>
        <layout>
            <updates>
                <ems_payment>
                    <file>ems_payment.xml</file>
                </ems_payment>
            </updates>
        </layout>
        <translate>
            <modules>
                <EMS_Payment>
                    <files>
                        <default>EMS_Payment.csv</default>
                    </files>
                </EMS_Payment>
            </modules>
        </translate>
        <events>
            <sales_convert_quote_payment_to_order_payment>
                <observers>
                    <ems_payment_convert_observer>
                        <type>singleton</type>
                        <class>ems_payment/observer</class>
                        <method>convertPayment</method>
                    </ems_payment_convert_observer>
                </observers>
            </sales_convert_quote_payment_to_order_payment>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <sales_order_shipment_save_after>
                <observers>
                    <ems_payment_shipment_observer>
                        <type>singleton</type>
                        <class>ems_payment/observer</class>
                        <method>captureOrder</method>
                    </ems_payment_shipment_observer>
                </observers>
            </sales_order_shipment_save_after>
        </events>
        <layout>
            <updates>
                <ems_payment>
                    <file>ems_payment.xml</file>
                </ems_payment>
            </updates>
        </layout>
        <translate>
            <modules>
                <EMS_Payment>
                    <files>
                        <default>EMS_Payment.csv</default>
                    </files>
                </EMS_Payment>
            </modules>
        </translate>
    </adminhtml>
